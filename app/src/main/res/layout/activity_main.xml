<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BemVindo"
        android:src="@drawable/toiletverde"/>

    <Button
    android:id="@+id/login"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Login"
    android:onClick="loginFace"
     />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btCadastrarNovo"
        android:text="Cadastrar Novo"
        android:layout_below="@+id/lvNome"
        android:visibility="gone"/>

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:onClick="logoutFace"
        android:visibility="gone"/>



    <ListView
        android:id="@+id/lvNome"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_below="@+id/logout"
        android:layout_alignParentStart="true"
        android:visibility="gone">

    </ListView>



</RelativeLayout>
